<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".NavigationComp.CakeRecipeFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:text="CAKE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/text_cake" android:textAlignment="center"
                android:textSize="36sp" android:textColor="@android:color/holo_green_dark"
                android:background="@android:color/holo_orange_light"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="682dp"
                    android:id="@+id/text_recipeDescription"
                    android:textSize="24sp"
                    android:text="@string/cake_recipe"
                    android:scrollbars="vertical"/>
        </ScrollView>
    </LinearLayout>
</FrameLayout>